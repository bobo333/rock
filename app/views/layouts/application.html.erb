<!DOCTYPE html>
<html>
<head>
  <title>Look At This Fucking Rock</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- for devise -->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <% if notice.present? %>
                <p class="notice"><%= notice %></p>
            <% end %>
            <% if alert.present? %>
                <p class="alert"><%= alert %></p>
            <% end %>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <%= link_to "All Rocks", rocks_path %>
            &middot;
            <%= link_to "New Rock", new_rock_path %>
        </div>
        <div class="col-sm-6 text-right">
            <% if current_user.present? %>
                <div>Hello <%= current_user.name %></div>
                <div><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></div>
            <% else %>
                <div>Hello guest</div>
                <div><%= link_to "Sign In", new_user_session_path %></div>
            <% end %>
        </div>
    </div>

    <%= yield %>
</div>

</body>
</html>
