<div class="row">
    <div class="col-sm-4">
        <h2>This is a new fucking rock comment</h2>
    </div>
</div>

<div class="row">
    <div class="col-sm-4">
        <%= image_tag @rock.image.url, class: "img-responsive" %>
    </div>
</div>

<div class="row">
    <div class="col-sm-4">
        <%= form_for @rock_comment, url: {action: "create"} do |f| %>
            <%= f.hidden_field :rock_id, value: @rock.id %>

            <div class="form-group">
                <label for="new-rock-comment">Write your rock comment for "<%= @rock.title %>"</label>
                <%= f.text_area :text, id: "new-rock-comment", class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.submit "Create", class: "btn btn-default" %>
                <%= link_to "Cancel", rock_path(@rock) %>
            </div>

        <% end %>
    </div>
</div>